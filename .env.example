# Demo Mode - Set to true to use mock data instead of real database
DEMO_MODE=true

# Turso Database (Modern SQLite-based database)
# Get these from: https://turso.tech/
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# Supabase (alternative to Turso, not needed if using Turso)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Stripe (use test keys)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# JWT
JWT_SECRET=your-jwt-secret-key-change-this

# API Key Encryption
API_KEY_ENCRYPTION_SECRET=your-encryption-secret-key-change-this

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
